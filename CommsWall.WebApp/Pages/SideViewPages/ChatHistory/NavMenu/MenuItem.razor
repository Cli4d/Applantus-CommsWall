<NavLink href="@location" class="nav-link" data-toggle="tab">
    <i class="side-nav-icon @FontAwesomeIconStyle fa-comment"></i>
</NavLink>

@code {
    [Parameter]
    public string? location { get; set; } 

    [Parameter]
    public string? linkText { get; set; }

    [CascadingParameter(Name = "FontAwesomeIconStyle")]
    private string? FontAwesomeIconStyle { get; set; }
}