<div class="message">
    <img 
        class="avatar-md" 
        src="@avatarUrl" 
        data-toggle="tooltip" 
        data-placement="top" 
        title="@title" 
        alt="avatar"
    >
    <div class="text-main">
        <div class="text-group">
            <div class="text typing">
                <div class="wave">
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public String? avatarUrl { get; set; }

    [Parameter]
    public String? title { get; set; }
}